{
    "id": "magical-glass",
    "authors": [
        "Nyakorita",                    // original author
        "Sam Deluxe",                   // current author and lead programmer
        "Bor",                          // contributor of magical glass classic
        "Just Another Random User",     // contributor of magical glass classic
        "FireRainV"                     // contributor of magical glass classic
    ],
    "version": "beta v1.0.0",
    "engineVer": "v0.9.0-dev",

    // PLEASE FOR THE LOVE OF GOD DON'T EDIT THESE
    // Change mg's config options in your mod.json
    "config": {
        "defaultBattleSystem": "undertale",
        "allowPartyMembers": true,
        
        "keepTensionAfterLightBattles": false,
        "lightWorldUndertaleText": true,
        "lightSpeechBubble": "ut_large",

        "lightBattleTensionDefault": true,
        "lightBattleDefendDefault": true,

        "lightBattleTextShake": true,
        "lightBattleMercyMessages": false,

        "lightBattleListItemMenu": false,

        "lightMenuHideCell": true,

        "lightMenuCapitalizedName": true,
        "lightMenuCurrencyAlignFix": true,

        "lightItemMenuPartySelectConfirm": false,

        "lightStatMenuCapitalizedName": true,

        // subtracts 10 from AT and DF in the stat menu when true
        "lightStatMenuUndertaleStatDisplay": true,

        // "always": always displays magic in all party members' stat menus
        // "has_spell": only displays magic if that member has a spell
        // "has_magic: only displays magic if that member's MG is greater than 0
        // false: never display magic
        "lightStatMenuMagicDisplay": false,

        // false: the previous ruling only affects the currently selected party member
        // true: the previous ruling affects the whole party
        "lightStatMenuPartyWideMagicDisplay": true,

        "lightStatMenuMagicAlignFix": true
    }
}